#:kivy 1.0.9

<TestScreen>:

    Label:
        text: "Items"
        font_size: 44
        center_x: root.center_x
        center_y: root.height-20
    Button:
        text: "+"
        font_size: 44
        width: 50
        height: 50
        # Instead of function give it constructor of a custom widgetheight: 50
        on_press: root.newItemWidget()
        x: root.width - self.width
        y: root.height - self.height
    ScrollView:
        id: "itemListScroll"
        size_hint_y: .73
        pos_hint: {'x':0, 'y':.11}
        do_scroll_x: False
        do_scroll_y: True
        width: root.width-45
        height:root.height-20
        center_x: self.width/2 - 5
        center_y: root.height * 2 / 4 - 40
        GridLayout:
            size:(root.width, root.height)
            size_hint_x: None
            size_hint_y: None
            cols:1
            height: self.minimum_height

            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem
            NewItem



<NewItem@GridLayout>:
    cols: 2
    Label:
        id:"ItemName"
        text: "Name"
    TextInput:
        id:"ItemNameValue"
        multiline: False
        hint: ""
    Label:
        id:"ItemCost"
        text: "Cost"
    TextInput:
        id:"ItemCostValue"
        multiline: False
        hint: ""
    Label:
        id:"ItemWho"
        text: "Who"
    TextInput:
        id:"ItemWhoValue"
        multiline: True
        hint: ""
